<script>
var spans = $("*").find("span"); 

var severe =  $("*").find(".severe");
        
var warnings = $("*").find("#warnings");
          
var warningItems = $("#warnings").find("li");
         
var ul = $("section").find("li:has(.mild)"); 
        
var dataX = $("*").find("span[data-x]");
        
$("*").find(".purple").css({"background-color": "magenta"}); 

$(".continent").text("Australia"); 
            
$("#warnings li:odd").attr("class", "stripe");
        
$("main.facts").attr("class", "");
</script>

